<%- include('./partials/header.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-md-6 mt-5">
            <h2 class="alert alert-success text-center">Add New Student</h2>
            <form action="" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" name="name" id="name" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="text" name="age" id="age" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="fees" class="form-labe">Fees</label>
                    <input type="text" name="fees" id="fees" class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="col-md-6 mt-5">
            <h2 class="alert alert-danger text-center">List Student</h2>
            <%# show all data %>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Age</th>
                        <th scope="col">Fees</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% let i = 1 %>
                    <% data.forEach((item)=>{ %>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= item.name %></td>
                            <td><%= item.age %></td>
                            <td><%= item.fees.toString() %></td>
                            <td>
                                <form action="/edit/<%= item._id %>" method="get" class="d-inline">
                                    <button type="submit" class="btn"><i class="fas fa-pen-square text-info"></i></button>
                                </form>

                                <form action="/delete/<%= item._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn"><i class="fas fa-trash text-danger"></i></button>
                                </form>
                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
             </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
